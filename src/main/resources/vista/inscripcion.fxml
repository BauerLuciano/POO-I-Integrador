<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.eventos.controlador.InscripcionController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Inscripción a Taller">
        <font>
            <Font name="System Bold" size="22.0" />
        </font>
    </Label>

    <Label fx:id="lblNombreTaller" text="..." textFill="#0066cc">
        <font>
            <Font size="16.0" />
        </font>
    </Label>
    
    <Label fx:id="lblCupo" text="Cupo disponible: ..." />

    <VBox spacing="5.0" alignment="CENTER_LEFT">
        <Label text="Seleccione al Participante:" />
        <ComboBox fx:id="comboPersonas" prefWidth="300.0" promptText="Elija una persona..." />
    </VBox>

    <Button text="Confirmar Inscripción" onAction="#confirmarInscripcion" 
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;" />

</VBox>