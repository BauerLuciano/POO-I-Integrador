<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" alignment="TOP_CENTER" 
      xmlns="http://javafx.com/javafx/21" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.eventos.controlador.ListadoController" 
      stylesheets="@../estilos.css"
      style="-fx-padding: 30;">

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Listado de Personas" styleClass="label-titulo"/>
        <Region HBox.hgrow="ALWAYS"/> 
        
        <Button text="Editar" onAction="#editarPersona" styleClass="button, btn-warning"/>
        <Button text="Eliminar" onAction="#eliminarPersona" styleClass="button, btn-danger"/>
        <Separator orientation="VERTICAL"/>
        <Button text="+ Nueva Persona" onAction="#irAFormulario" styleClass="button, btn-primary"/>
    </HBox>

    <TableView fx:id="tabla" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colNombre" text="Nombre Completo" prefWidth="250"/>
            <TableColumn fx:id="colDni" text="DNI" prefWidth="120"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="250"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

</VBox>